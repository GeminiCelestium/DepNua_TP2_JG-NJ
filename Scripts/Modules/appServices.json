    "microServices": {
      "type": "array",
      "defaultValue": [
        {
          "id": 1,
          "name": "mvc",
          "appServicePlanSku": "S1",
          "createDatabase": false
        },
        {
          "id": 2,
          "name": "postulations",
          "appServicePlanSku": "B1",
          "databaseSku": "Standard",
          "createDatabase": true
        },
        {
          "id": 3,
          "name": "emplois",
          "appServicePlanSku": "F1",
          "databaseSku": "Basic",
          "createDatabase": true
        },
        {
          "id": 4,
          "name": "documents",
          "appServicePlanSku": "F1",
          "createDatabase": false
        },
        {
          "id": 5,
          "name": "favoris",
          "appServicePlanSku": "F1",
          "createDatabase": false
        }
      ]
    }
  },
  "resources": [
    {
      "copy": {
        "name": "appServicePlans",
        "count": "[length(parameters('microServices'))]"
