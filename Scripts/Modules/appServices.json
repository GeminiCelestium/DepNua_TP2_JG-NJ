      "name": "[format('webapp-{0}-{1}-{2}', parameters('spName'), parameters('microServices')[copyIndex()].name, uniqueString(resourceGroup().id))]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[parameters('microServices')[copyIndex()].id]"
      },
      "tags": {
        "Application": "[parameters('spName')]"
      }
    },
    {
      "copy": {
        "name": "appServiceSlots",
